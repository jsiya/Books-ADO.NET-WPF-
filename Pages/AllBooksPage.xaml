                <Button Grid.Row="0" 
                        Name="InsertButton"
                        Content="INSERT"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        Height="60"
                        Width="100"
                        FontSize="20"
                        Background="DarkBlue"
                        Foreground="Beige"
                        Click="InsertButton_Click"
                        />

                <Button Grid.Row="1" 
                        Name="UpdateButton"
                        Content="UPDATE"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        Height="60"
                        Width="100"
                        FontSize="20"
                        Background="Green"
