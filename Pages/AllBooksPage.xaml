<Page x:Class="Books_ADO.NET_.Pages.AllBooksPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Books_ADO.NET_.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="1000"
      Title="AllBooksPage"
      Loaded="Page_Loaded">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="5*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="2.5*"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <ComboBox Name="CategoryComboBox"
                      Grid.Column="0"
                      VerticalAlignment="Center"
                      HorizontalAlignment="Center"
                      Height="60"
                      Width="240"
                      BorderBrush="RosyBrown"
                      Background="Beige"
                      SelectionChanged="CategoryComboBox_SelectionChanged"
                      >

            </ComboBox>
            <ComboBox Name="AuthorsComboBox"
                      Grid.Column="1"
                      VerticalAlignment="Center"
                      HorizontalAlignment="Center"
                      Height="60"
                      Width="240"
                      BorderBrush="RosyBrown"
                      Background="Beige"
                      SelectionChanged="AuthorsComboBox_SelectionChanged"
                      IsEnabled="False">

            </ComboBox>
            <TextBox Name="SearchBar"
                     Grid.Column="2" 
                     FontSize="16" 
                     VerticalAlignment="Center" 
                     HorizontalAlignment="Left" 
                     VerticalContentAlignment="Center" 
                     Height="60"
                      Width="240"
                     BorderBrush="RosyBrown"
                     TextChanged="SearchBar_TextChanged">
            </TextBox>
            <Button x:Name="SearchButton"
                    Grid.Column="2"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Height="60"
                    Width="60"
                    Margin="15"
                    Background="RosyBrown"
                    BorderThickness="0"
                    Click="SearchButton_Click"
                    Foreground="Beige"
                    FontWeight="DemiBold"
                    IsEnabled="False"
                    >
                Search
            </Button>

            <Button x:Name="RefreshButton"
                    Grid.Column="3"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Height="60"
                    Width="60"
                    Margin="30,10"
                    Background="DeepSkyBlue"
                    BorderThickness="0"
                    Foreground="Beige"
                    FontWeight="DemiBold"
                    Click="RefreshButton_Click"
                    >
                REFRESH
            </Button>
        </Grid>
        <Grid Grid.Row="1"
              Background="Beige">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            
            <DataGrid Grid.Column="0"
                      Name="BooksDataGrid"
                      Visibility="Visible"
                      AutoGenerateColumns="True"
                      CanUserAddRows="True"
                      CanUserDeleteRows="True"
                      
                      >
            </DataGrid>
            
